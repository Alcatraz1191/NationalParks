@model IEnumerable<NationalParks.Models.Visitor>

@foreach (var item in Model)
{
    <div>
        <h4>@Html.DisplayFor(model => item.name)</h4>
        <hr />

        <dl class="dl-horizontal">
            <dt>
                Description
            </dt>
            <dd>
                @Html.DisplayFor(model => item.description)
            </dd>
            <dt>
                Directions
            </dt>

            <dd>
                @Html.DisplayFor(model => item.directionsInfo)
            </dd>
            <dt>
                Link
            </dt>

            <dd>
                <a href="@item.url" target="_blank">
                    @Html.DisplayFor(model => item.url)
                </a>
            </dd>

        </dl>

    </div>
}
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
